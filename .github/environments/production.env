# 生产环境配置
# GitHub Secrets中需要配置的环境变量

# SSH访问密钥 (在GitHub Secrets中配置)
# PRODUCTION_SSH_KEY=<私钥内容>

# Slack通知配置 (在GitHub Secrets中配置)  
# SLACK_WEBHOOK=<Slack Webhook URL>

# 服务器配置
PRODUCTION_SERVER=192.3.11.106
PRODUCTION_PORT=6500
DEPLOY_USER=root
DEPLOY_PATH=/var/www/html
BACKUP_PATH=/var/backups

# 应用配置
NODE_ENV=production
API_URL=https://api.assaybio.cn
CDN_URL=https://cdn.assaybio.cn

# 监控配置
HEALTH_CHECK_ENDPOINT=/
HEALTH_CHECK_TIMEOUT=30
HEALTH_CHECK_INTERVAL=300

# 备份配置
BACKUP_RETENTION_DAYS=7
BACKUP_COMPRESSION=gzip

# 部署配置
DEPLOYMENT_STRATEGY=recreate
ZERO_DOWNTIME=false
MAINTENANCE_MODE=false

# 安全配置
FORCE_HTTPS=false
SECURITY_HEADERS=true
CORS_ENABLED=false