# AssayBio 开发环境配置
NODE_ENV=development
DEPLOY_ENV=development

# 服务器配置
SERVER_HOST=dev.assaybio.com
SERVER_PORT=80
SERVER_NAME=dev.assaybio.com

# 数据库配置
DATABASE_URL=postgresql://assaybio_dev:dev_password@localhost:5432/assaybio_dev
REDIS_URL=redis://localhost:6379/1

# API配置
API_BASE_URL=http://dev-api.assaybio.com
API_TIMEOUT=30000

# CDN配置
CDN_URL=http://dev-cdn.assaybio.com
ASSETS_VERSION=dev

# 缓存配置
ENABLE_CACHE=false
CACHE_TTL=300

# 日志配置
LOG_LEVEL=debug
LOG_FORMAT=dev
LOG_FILE=/var/log/assaybio/dev.log

# 监控配置
ENABLE_MONITORING=true
SENTRY_DSN=https://your-dev-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=development

# 功能开关
FEATURE_FLAG_ANALYTICS=true
FEATURE_FLAG_NEW_UI=true
FEATURE_FLAG_BETA_FEATURES=true

# Docker配置
CONTAINER_NAME=assaybio-dev
CONTAINER_PORT=3000
NETWORK_NAME=assaybio-dev-network

# Nginx配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=10M

# SSL配置（开发环境使用自签名证书）
SSL_ENABLED=false
SSL_CERT_PATH=/etc/nginx/certs/dev.crt
SSL_KEY_PATH=/etc/nginx/certs/dev.key

# 备份配置
BACKUP_ENABLED=false
BACKUP_RETENTION_DAYS=7