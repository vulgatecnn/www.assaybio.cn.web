# AssayBio 测试环境配置
NODE_ENV=staging
DEPLOY_ENV=staging

# 服务器配置
SERVER_HOST=staging.assaybio.com
SERVER_PORT=80
SERVER_NAME=staging.assaybio.com

# 数据库配置
DATABASE_URL=postgresql://assaybio_staging:staging_password@localhost:5432/assaybio_staging
REDIS_URL=redis://localhost:6379/2

# API配置
API_BASE_URL=https://staging-api.assaybio.com
API_TIMEOUT=30000

# CDN配置
CDN_URL=https://staging-cdn.assaybio.com
ASSETS_VERSION=staging

# 缓存配置
ENABLE_CACHE=true
CACHE_TTL=1800

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=/var/log/assaybio/staging.log

# 监控配置
ENABLE_MONITORING=true
SENTRY_DSN=https://your-staging-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=staging

# 性能监控
APM_ENABLED=true
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=AssayBio-Staging

# 功能开关
FEATURE_FLAG_ANALYTICS=true
FEATURE_FLAG_NEW_UI=true
FEATURE_FLAG_BETA_FEATURES=true

# Docker配置
CONTAINER_NAME=assaybio-staging
CONTAINER_PORT=3000
NETWORK_NAME=assaybio-staging-network

# Nginx配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_KEEPALIVE_TIMEOUT=65
NGINX_CLIENT_MAX_BODY_SIZE=50M
NGINX_GZIP_ENABLED=true
NGINX_RATE_LIMIT=10r/s

# SSL配置
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/staging.assaybio.com/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/staging.assaybio.com/privkey.pem
SSL_PROTOCOLS="TLSv1.2 TLSv1.3"

# 安全配置
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
HSTS_ENABLED=true

# 备份配置
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=14
BACKUP_SCHEDULE="0 2 * * *"

# 测试配置
E2E_TESTS_ENABLED=true
PERFORMANCE_TESTS_ENABLED=true
TEST_TIMEOUT=60000