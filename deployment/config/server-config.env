# AssayBio服务器配置文件
# 使用前请根据实际情况修改

# 服务器连接配置
SERVER_IP=192.3.11.106
SERVER_USER=root
SERVER_PORT=22

# 部署路径配置
REMOTE_PROJECT_PATH=/opt/assaybio-website
BACKUP_PATH=/opt/backups/assaybio
NGINX_CONFIG_PATH=/etc/nginx/sites-available

# 应用配置
APP_NAME=assaybio-website
APP_PORT=80
HEALTH_CHECK_URL=http://localhost/

# Docker配置（如果使用Docker部署）
DOCKER_IMAGE=assaybio/website
DOCKER_REGISTRY=ghcr.io
COMPOSE_FILE=docker-compose.yml

# SSL配置（可选）
ENABLE_SSL=false
SSL_CERT_PATH=/etc/ssl/certs
SSL_KEY_PATH=/etc/ssl/private
DOMAIN_NAME=assaybio.example.com

# 监控配置
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 备份配置
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP=true

# 日志配置
LOG_LEVEL=info
LOG_PATH=/var/log/assaybio
MAX_LOG_SIZE=100M

# 性能配置
MAX_CONNECTIONS=1000
WORKER_PROCESSES=auto
KEEPALIVE_TIMEOUT=65